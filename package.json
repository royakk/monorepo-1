{
  "name": "multilingual-dashboard-monorepo",
  "private": true,
  "type": "module",
  "packageManager": "npm@10.0.0",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo dev",
    "dev:admin-app": "cd apps/admin-app && npm run dev",
    "dev:public-app": "cd apps/public-app && npm run dev",
    "build": "turbo build",
    "test": "turbo test",
    "test:unit": "turbo test",
    "test:e2e": "cd apps/admin-app && npm run e2e",
    "test:coverage": "turbo test:coverage",
    "e2e": "turbo e2e",
    "lint": "turbo lint",
    "typecheck": "turbo typecheck",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "clean": "turbo clean"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.28.0",
    "@babel/preset-react": "^7.27.1",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/jest": "^30.0.0",
    "babel-jest": "^30.0.5",
    "jest": "^30.0.5",
    "prettier": "^3.5.3",
    "react-test-renderer": "^19.1.1",
    "turbo": "^2.3.1",
    "typescript": "^5.5.3"
  }
}
